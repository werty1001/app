
.slick__dots

	color = $c_border
	active = $c_bright

	display block
	list-style none
	padding 0
	margin 0
	text-align center
	margin-top 50px

	button
		display none

	li
		display inline-block
		vertical-align top
		width 10px
		height @width
		margin 5px 8px
		background-color alpha(color,50%)
		box-shadow 0 0 0 3px alpha(color,0%)
		border-radius 50%
		transition box-shadow .25s

		&:hover
			cursor pointer
			background-color active

		&.slick-active
			pointer-events none
			background-color active
			box-shadow 0 0 0 3px @background-color
