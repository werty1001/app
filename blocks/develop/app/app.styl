
@import 'fonts/*'
@import 'base/normalize'


/*!*
 * App
 */

.app
	position relative
	display block
	width 100%
	height 100%

	font-family ( typeof( $f_family ) == 'string' ? $f_family unquote( ',' ) : unquote( '' ) ) -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue'
	font-size typeof( $f_size ) == 'unit' ? $f_size : 16px
	color typeof( $c_text ) == 'rgba' ? $c_text : #252525
	font-weight typeof( $f_weight ) == 'unit' ? $f_weight : 400
	line-height 1
